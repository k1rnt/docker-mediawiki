root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[package.json,*.less,*.coffee]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4
